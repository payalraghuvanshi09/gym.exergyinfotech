                        {{/each}}
                    {{/if}} -->
              <div class="alert alert-alert" role="alert" id="error"> </div>
              <!-- form start -->
              <form method="post" action="/customers/create">

                <div class="card-body row">
                  <div class="form-group col-md-3">

                    <label for="name">User Name</label>
                    <input type="text" class="form-control" id="en" placeholder="Enter Name" name="user_name" value="" required>
                  </div>
                  <div class="form-group col-md-3">
                    <label for="name">Father Name</label>
                    <input type="text" class="form-control" id="age" placeholder="Enter Father name" name="fathers_name"
                      value="" required>
                  </div>
