                    <input type="radio" id="bn" name="gender" value="HTML" required>
                      <label for="gender">Male</label>
                    <input type="radio" id="bn" name="gender" value="HTML">
                      <label for="gender">Female</label><br>
                  </div>
                
                  <div class="form-group col-md-3">
                    <label>Mobile Number</label>

                    <div class="input-group">
                      <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fas fa-phone"></i></span>
                      </div>
                      <input type="text" class="form-control" name="mobile" data-inputmask='"mask": "(+91) 99999-99999"' data-mask  required="required" >
                      <!-- <input type="text" name="mobile" class="form-control" placeholder="Enter Mobile Number" data-inputmask-inputformat='"mask": "(+91) 99999-99999"' data-mask required="required" > -->
