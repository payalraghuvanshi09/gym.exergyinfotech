                    </div>
                    <!-- /.input group -->
                  </div>
                  <div class="form-group col-md-3">
                    <label for="email">Email</label>
                    <input type="email" class="form-control" id="ca" placeholder="Enter Your Email" name="email" required>
                  </div>
                  <div class="form-group col-md-3">
                    <label for="address">Address </label>
                    <input type="text" class="form-control" id="ta" placeholder="Enter Your Address" name="address" required>
                  </div>
                  <div class="form-group col-md-3">
                    <label for="Date">Date of joining</label>
                    <input type="date" class="form-control" id="dpt" placeholder="Date of joining"
                      name="date_of_joining" required>
                  </div>
                  <div class="form-group col-md-3">
                    <label for="date">Date of birth</label>
                    <input type="date" class="form-control" id="reference" placeholder="date of Birth"
                      name="date_of_birth" required>
                  </div>

                  <div class="form-group col-md-3">
                    <label for="Blood Group">Blood Group

                    </label>


                    <select name="blood_group" class="custom-select form-control-border border-width-2"
                      id="exampleSelectBorderWidth2" required>
                      <option>Blood Group</option>
                      <option <% if(data.blood_group == 'O-'){ %>
                        selected="selected"
                        <% } %>
                        value="O-">O-
                        
                      </option>
                      <option <% if(data.blood_group == 'O+'){ %>
                        selected="selected"
                        <% } %>
                        value=
                         " O+"> O+
                      </option>
                      <option <% if(data.blood_group == 'A+'){ %>
                        selected="selected"
                        <% } %>
                        value=
                          "A+"> A+
                      </option>
                      <option <% if(data.blood_group == 'A-'){ %>
                        selected="selected"
                        <% } %>
                        value=
                          "A-" > A-
                      </option>
                      <option <% if(data.blood_group == 'AB+'){ %>
                        selected="selected"
                        <% } %>
                        value=
                         " AB+"> AB+
                      </option>
                      <option <% if(data.blood_group == 'AB-'){ %>
                        selected="selected"
                        <% } %>
                        value=
                        "AB-"> AB-
                      </option>
                      <option <% if(data.blood_group == 'B+'){ %>
                        selected="selected"
                        <% } %>
                        value=
                        "  B+"> B+
                      </option>
                      <option <% if(data.blood_group == 'B-'){ %>
                        selected="selected"
                        <% } %>
                        value=
                         " B-"> B-
                      </option>
