<%- include('../../partials/header') %>
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Subscriptions</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Home</a></li>
              <li class="breadcrumb-item active">Subscriptions</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">

            <div class="card">
              <div class="card-header">
                <h1 class="card-title">Subscription Data</h1>
                <a href="/subscriptions/add" class="btn btn-info float-right">Add</a>
              </div>
              <!-- /.card-header -->
              <div class="card-body">
                <table id="example_tab" class="table table-bordered table-striped">
                  <thead>
                  <tr>
                    <th>Sr</th>
                    <th>Subscription Plan</th>
                    <th>Duration in Month</th>
                    <th>Price in Indian Rs.</th>
                  
                  </tr>
                 
                  </thead>
                  <tbody>
                  <tr>
                    <% for(var i=0; i < data.length; i++ )  { %>
                    <td><%= i+1 %></td>
                    <td><%= data[i].name %>
                    </td>
                    <td><%= data[i].duration %></td>
                    <td> <%= data[i].price %></td>
                  
                    <td>
                    <a href="/subscriptions/edit/<%=data[i].id%>" class="btn btn-primary btn sm">Edit</a> 
                    <a href="/subscriptions/delete/<%=data[i].id%>" class="btn btn-primary btn sm">Delete</a>

                    </td>
                  </tr>
                  <% } %>
                  </tbody>
                  <tfoot>
                  
                  </tfoot>
                </table>
              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
          </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>
