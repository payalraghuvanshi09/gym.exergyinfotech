
<%- include('../../partials/header') %>
<!-- Content Wrapper. Contains page content -->

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Salary Table</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Home</a></li>
              <li class="breadcrumb-item active">Salary</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">

            <div class="row">
                <!-- left column -->
                <div class="col-md-12">
                    <!-- general form elements -->
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Edit Salary Information</h3>
                        </div>
                        <!-- /.card-header -->
                        <!-- form start -->
                        <form method="post" action="/salary/update">

                            <div class="card-body row">
                                <!-- <div class="form-group col-md-3"> -->
<!-- 
                                    <label for="id"> ID</label> -->
                                    <input type="hidden" class="form-control" id="en" placeholder=" ID" name="id" value="<%- data.id %>">
                                </div>
                                <div class="card-body row">
                                <div class="form-group col-md-3">
                                  <label for="employee">Employee</label>
                                  <select class="form-control select2" style="width: 100%;" name="user_id" >
                                      <!-- <option disabled selected="selected">Select Employee</option> -->
                                      <% for(var i=0; i < emp.length ; i++ )  { %>
                                
                                        <option  <% if(emp[i].id == data.employee){ %>
                                          selected="selected" 
                                          <% } %>
                                       value="<%= emp[i].                                                                                                                     id%>"><%= emp[i].user_name%></option>
                                        
                                       <% } %>
                                     
                                    </select>
                              </div>
                                <div class="form-group col-md-3">
                                    <label for="amount">Monthly amount</label>
                                    <input type="text" class="form-control" id="age" placeholder="Enter Date" name="monthly" value="<%- data.monthly%>">
                                </div>
                                <div class="form-group col-md-3">
                                    <label for="date">Date</label>
                                    <input type="date" class="form-control" id="mn" placeholder="Login Time" name="dates" value="<%- data.dates %>">
                                </div>
                                <div class="form-group col-md-3">
                                  <label for="amount">PAN Card Number</label>
                                  <input type="text" class="form-control" id="age" placeholder="PAN Number" name="pan_number" value="<%- data.pan_number%>" required>
                              </div>
                              <div class="form-group col-md-3">
                                <label for="amount">Bank Account Number</label>
                                <input type="text" class="form-control" id="age" placeholder="Account Number" name="bank_acc_no" value="<%- data.bank_acc_no %>" required>
                            </div>
                            <div class="form-group col-md-3">
                              <label for="amount">Branch IFSC Code</label>
                              <input type="text" class="form-control" id="age" placeholder="IFSC Code" name="branch_ifsc_code" value="<%- data.branch_ifsc_code %>" required>
                          </div>
                          <div class="form-group col-md-3">
                            <label for="amount">Branch Name</label>
                            <input type="text" class="form-control" id="age" placeholder="Enter Date" name="branch_name" value="<%- data.branch_name %>" required>
                        </div>
                            </div>
                            <div class="card-footer">
                                <button type="submit" class="btn btn-primary">Submit</button>
                                <a href="./index.ejs"></a>
                            </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
<%- include('../../partials/footer') %> -->
