
<%- include('../../partials/header') %>
<!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>Attendance Table</h1>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>

    
        <section class="content">
            <div class="container-fluid">

                <div class="row">
                    <!-- left column -->
                    <div class="col-md-12">
                        <!-- general form elements -->
                        <div class="card card-primary">
                            <div class="card-header">
                                <h3 class="card-title"> Attendance Information</h3>
                            </div>
                            <!-- /.card-header -->
                            <!-- form start -->
                            <form method="post" action="/attendance/create">
                                <div class="card-body row">
                                    <div class="form-group col-md-3">
                                        <label for="employee">Employee</label>
                                        <select class="form-control select2" style="width: 100%;" name="user_id" value="">
                                            <option selected="selected">Select Employee</option>
                                            <% for(var i=0; i < data.length ; i++ )  { %>
                                                
                                            <option value="<%= data[i].id %>"><%= data[i].user_name %></option>
                                            <% } %>
                                          </select>
                                    </div>
                                    <div class="form-group col-md-3">
                                        <label for="date">Date</label>
                                        <input type="date" class="form-control" id="age" placeholder="Enter Date" name="date" value="" required>
                                    </div>
                                   
                                    <div class="form-group col-md-3">
                                        <label for="Time">Login Time</label>
                                        <input type="time" class="form-control" id="mn" placeholder="Login Time" name="login_time" value="" required>
                                    </div>
                                    <div class="form-group col-md-3">
                                        <label for="Time">Logout Time </label>
                                        <input type="time" class="form-control" id="ca"
                                            placeholder="Logout Time" name="logout_time" required>
                                    </div>
                                </div>
                                <div class="card-footer">
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>


    </div>

  <!-- /.content-wrapper -->
  <%- include('../../partials/footer') %>