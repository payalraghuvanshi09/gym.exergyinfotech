
<%- include('../../partials/header') %>
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Salary</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Home</a></li>
              <li class="breadcrumb-item active">Salary</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">

            <div class="card">
              <div class="card-header">
                <h3 class="card-title">Salary Data</h3>
                <a href="/salary/add" class="btn btn-info float-right">Add</a>
              </div>
              <!-- /.card-header -->
              <div class="card-body">
                <table id="example_tab" class="table table-bordered table-striped">
                  <thead>
                  <tr>
                    <th> Sr.</th>
                   
                    <th>Employee</th>
                    <th>date</th>
                    <th>Amount</th>
                    <th>PAN Number</th>
                    <th>Bank Account Number</th>
                    <th>Breanch IFSC Code</th>
                    <th>Branch Name</th>
                    
                   
                  </tr>
                  </thead>
                  <tbody>
                  <tr>
                    <% for(var i=0; i < data.length; i++ )  { %>
                    <td><%= i+1 %></td>
                    
                    <td><%= data[i].user_name%>
                    </td>
                    <td><%= data[i].dates %></td>
                    <td><%= data[i].monthly %>
                    </td>
                    <td><%= data[i].pan_number %></td>
                    <td><%= data[i].bank_acc_no %>
                    </td>
                    <td><%= data[i].branch_ifsc_code %></td>
                    <td><%= data[i].branch_name %>
                    </td>
                    <td>
                      <a href="/salary/edit/<%=data[i].id%>" class="btn btn-primary btn sm">Edit</a> 
                      <a href="/salary/delete/<%=data[i].id%>" class="btn btn-primary btn sm">Delete</a>
                    </td>
                    
       
                  </tr>
                  <% } %>
                  </tbody>
                 
                  </tfoot>
                </table>
              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
          </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
<%- include('../../partials/footer') %>
